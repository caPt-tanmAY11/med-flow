// Nurse duty/shift tracking
model NurseDuty {
  id         String    @id @default(uuid())
  nurseId    String
  nurseName  String
  shiftType  String    // MORNING, EVENING, NIGHT
  shiftDate  DateTime
  checkInAt  DateTime?
  checkOutAt DateTime?
  isActive   Boolean   @default(true)
  ward       String?
  secretCode String?   // Unique code generated by admin for this nurse's shift
  createdAt  DateTime  @default(now())

  @@index([nurseId])
  @@index([shiftDate])
  @@index([isActive])
}

// Nurse-patient assignment
model NursePatientAssignment {
  id          String    @id @default(uuid())
  nurseId     String
  nurseName   String
  encounterId String
  patientId   String
  assignedAt  DateTime  @default(now())
  assignedBy  String
  endTime     DateTime?
  isActive    Boolean   @default(true)

  @@index([nurseId])
  @@index([encounterId])
  @@index([patientId])
  @@index([isActive])
}

// Daily verification codes for nurses (admin creates)
model NurseDailyCode {
  id        String   @id @default(uuid())
  code      String   // 4-digit code
  validDate DateTime
  createdBy String
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)

  @@index([validDate])
  @@index([isActive])
}

// Nurse verification log - tracks when nurses verify with daily code
model NurseVerification {
  id         String   @id @default(uuid())
  nurseId    String
  nurseName  String
  verifiedAt DateTime @default(now())
  codeUsed   String
  ipAddress  String?
  shiftDate  DateTime

  @@index([nurseId])
  @@index([verifiedAt])
  @@index([shiftDate])
}
